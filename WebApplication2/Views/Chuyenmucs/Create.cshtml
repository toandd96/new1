@model WebApplication2.Models.Chuyenmuc

@{
    ViewData["Title"] = "Create";
}

<h2>Tạo</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Chuyên mục</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Tenchuyenmuc" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Tenchuyenmuc" class="form-control" />
                <span asp-validation-for="Tenchuyenmuc" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Sobaiviet" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Sobaiviet" class="form-control" readonly="" value="0"/>
                <span asp-validation-for="Sobaiviet" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Quay trở lại</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
