        <div class="form-actions no-color">
            <input type="submit" value="Chấp nhận" class="btn btn-danger" /> 
            <input type="button" value="Quay trở lại" class="btn btn-info" onclick="location.href='@Url.Action("Index","Tintucs")'" />
        </div>
    </form>
